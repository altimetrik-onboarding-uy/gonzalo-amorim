<aura:component >
	<aura:attribute name="timesheet" type="Timesheet__c[]"/>
    <aura:attribute name="newTimesheet" type="Timesheet__c" 
                    default="{'Employee__c': '',
                             'Contact.Birthdate': null,
                             'Start_Date__c': null,
                             'End_Date__c': null,
                             'Sum_Of_Hours__c': '',
                             'Gross_Pay__c': '',
                             'Taxes__c': '',
                             'Type__c': '',
                             'Submitted__c': '',
                             'sobjectType':'Timesheet__c'}"/>

    <!-- PAGE HEADER -->
    <lightning:layout class="slds-page-header slds-page-header--object-home">
        <lightning:layoutItem >
            <lightning:icon iconName="standard:scan_card" alternativeText="My Timesheets"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">Timesheets</h1>
                <h2 class="slds-text-heading--medium">My Timesheets</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / PAGE HEADER -->
    <!-- NEW TIMESHEET FORM -->
    <lightning:layout >
        <lightning:layoutItem padding="around-small" size="6">
            <!-- CREATE NEW TIMESHEET -->
    <div aria-labelledby="newTimesheetForm">
        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme--default slds-container--small">
        <legend id="timesheetForm" class="slds-text-heading--small 
          slds-p-vertical--medium">
          View Employee Timesheet
        </legend>
  
        <!-- CREATE NEW TIMESHEET FORM -->
        <form class="slds-form--stacked">
            <!-- EMPLOYEE -->
            <lightning:input aura:id="timesheetForm" label="Employee Name"
                             name="employeeName"
                             value="{!v.newTimesheet.Employee__c}"
                             required="true"/>
            <!-- EMPLOYEE BIRTHDATE -->
            <lightning:input type="Date" aura:id="timesheetForm" label="Birthdate"
                             name="employeeBirthdate"
                             value="{!v.newTimesheet.Contact.Birthdate}"/>
            <!-- START DATE -->
            <lightning:input type="Date" aura:id="timesheetForm" label="Start Date"
                             name="startDate"
                             value="{!v.newTimesheet.Start_Date__c}"/>
            <!-- END DATE -->
            <lightning:input type="Date" aura:id="timesheetForm" label="End Date"
                             name="endDate"
                             value="{!v.newTimesheet.End_Date__c}"/>
            <!-- SUM OF HOURS/TOTAL HOURS -->
            <lightning:input type="Number" aura:id="timesheetForm" label="Total Hours Worked"
                             name="sumOfHours"
                             value="{!v.newTimesheet.Sum_Of_Hours__c}"/>
            <!-- GROSS PAY -->
            <lightning:input type="Currency" aura:id="timesheetForm" label="Gross Pay"  
                             name="grossPay"
                             value="{!v.newTimesheet.Gross_Pay__c}"/>
            <!-- TAXES -->
            <lightning:input type="Currency" aura:id="timesheetForm" label="Taxes"  
                             name="taxes"
                             value="{!v.newTimesheet.Taxes__c}"/>
            <!-- SUBMITTED -->
        	<lightning:input type="checkbox" aura:id="timesheetForm" label="Submitted"  
                         name="submitted"
                         checked="{!v.newTimesheet.Submitted__c}"/>
            <lightning:button label="Create Timesheet" 
                              class="slds-m-top--medium"
                              variant="brand"
                              onclick="{!c.clickCreate}"/>
        </form>
        <!-- / CREATE NEW TIMESHEET FORM -->
  
      	</fieldset>
      	<!-- / BOXED AREA -->
    </div>
    <!-- / CREATE NEW TIMESHEET -->
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / NEW TIMESHEET FORM -->
    <!-- DISPLAY TIMESHEET LIST -->
    <c:timesheetList timesheet="{!v.timesheet}"/>
    <!-- / DISPLAY TIMESHEET LIST -->
</aura:component>